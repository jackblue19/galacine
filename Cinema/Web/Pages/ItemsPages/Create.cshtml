@page
@model Web.Pages.ItemsPages.CreateModel
@{
    ViewData["Title"] = "Create Item";
}

<h2 class="mb-4">Create New Item</h2>

<form method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="mb-3">
        <label asp-for="Item.ItemDesc" class="form-label">Description</label>
        <input asp-for="Item.ItemDesc" class="form-control" />
        <span asp-validation-for="Item.ItemDesc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.SuggestedPrice" class="form-label">Suggested Price</label>
        <input asp-for="Item.SuggestedPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Item.SuggestedPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.OriginalPrice" class="form-label">Original Price</label>
        <input asp-for="Item.OriginalPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Item.OriginalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.Type" class="form-label">Type</label>
        <select asp-for="Item.Type" class="form-select" asp-items="Model.TypeOptions">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Item.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.ItemCategory" class="form-label">Category</label>
        <select asp-for="Item.ItemCategory" class="form-select" asp-items="Model.CategoryOptions">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Item.ItemCategory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.Amount" class="form-label">Amount</label>
        <input asp-for="Item.Amount" type="number" class="form-control" />
        <span asp-validation-for="Item.Amount" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
