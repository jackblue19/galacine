<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Galaxy Cinema</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/galaxy-style.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="https://www.galaxycine.vn/_next/static/media/galaxy-logo-mobile.074abeac.png" alt="Galaxy Cinema" height="50">
                </a>

                <a href="/client/DatVe" class="btn btn-warning text-white d-none d-md-inline-block me-3">
                    <i class="fas fa-ticket-alt me-1"></i> Mua Vé
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- ... Menu như cũ ... -->
                    </ul>

                    <div class="d-flex align-items-center">
                        <a href="#" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-search"></i>
                        </a>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <form method="get" asp-page="/Auth/Logout" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    🚪 Đăng xuất
                                </button>
                            </form>
                        }
                        else
                        {
                            <a href="/Auth/Login" class="btn btn-outline-primary">
                                <i class="fas fa-user me-1"></i> Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-5 mt-5">
        <!-- Footer như cũ -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
