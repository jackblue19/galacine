@page
@model Web.Pages.Admin.Schedules.IndexModel
@using Data.Entities
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS -->
    <link rel="stylesheet" href="~/AdminTemplate_files/bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminTemplate_files/slimselect.css">
    <link rel="stylesheet" href="~/AdminTemplate_files/admin.css">

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="https://flixgo.volkovdesign.com/admin/icon/favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="https://flixgo.volkovdesign.com/admin/icon/favicon-32x32.png">

    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>FlixGo – Online Movies, TV Shows & Cinema HTML Template</title>

    <style id="smooth-scrollbar-style">
        [data-scrollbar] {
            display: block;
            position: relative;
        }
        .scroll-content {
            -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        }
        .scrollbar-track {
            position: absolute;
            opacity: 0;
            z-index: 1;
            background: rgba(222, 222, 222, .75);
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            -webkit-transition: opacity 0.5s 0.5s ease-out;
            transition: opacity 0.5s 0.5s ease-out;
        }
        .scrollbar-track.show,
        .scrollbar-track:hover {
            opacity: 1;
            -webkit-transition-delay: 0s;
            transition-delay: 0s;
        }
        .scrollbar-track-x {
            bottom: 0;
            left: 0;
            width: 100%;
            height: 8px;
        }
        .scrollbar-track-y {
            top: 0;
            right: 0;
            width: 8px;
            height: 100%;
        }
        .scrollbar-thumb {
            position: absolute;
            top: 0;
            left: 0;
            width: 8px;
            height: 8px;
            background: rgba(0, 0, 0, .5);
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- header -->
    <header class="header">
        <div class="header__content">
            <!-- header logo -->
            <a href="#" class="header__logo">
                <img src="~/AdminTemplate_files/logo.svg" alt="">
            </a>
            <!-- end header logo -->
            <!-- header menu btn -->
            <button class="header__btn" type="button">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <!-- end header menu btn -->
        </div>
    </header>
    <!-- end header -->
    <!-- sidebar -->
    <div class="sidebar">
        <!-- sidebar logo -->
        <a href="#" class="sidebar__logo">
            <img src="~/AdminTemplate_files/logo.svg" alt="">
        </a>
        <!-- end sidebar logo -->
        <!-- sidebar user -->
        <div class="sidebar__user">
            <div class="sidebar__user-img">
                <img src="~/AdminTemplate_files/user.svg" alt="">
            </div>
            <div class="sidebar__user-title">
                <span>Admin</span>
                <p>John Doe</p>
            </div>
            <button class="sidebar__user-btn" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M4,12a1,1,0,0,0,1,1h7.59l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l4-4a1,1,0,0,0,.21-.33,1,1,0,0,0,0-.76,1,1,0,0,0-.21-.33l-4-4a1,1,0,1,0-1.42,1.42L12.59,11H5A1,1,0,0,0,4,12ZM17,2H7A3,3,0,0,0,4,5V8A1,1,0,0,0,6,8V5A1,1,0,0,1,7,4H17a1,1,0,0,1,1,1V19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V16a1,1,0,0,0-2,0v3a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V5A3,3,0,0,0,17,2Z"></path></svg>
            </button>
        </div>
        <!-- end sidebar user -->
        <!-- sidebar nav -->
        @await Html.PartialAsync("_SideBarAdmin")
        <!-- end sidebar nav -->
        <!-- sidebar copyright -->
        <div class="sidebar__copyright">© FlixGo, 2018—2023. <br>Create by <a href="https://themeforest.net/user/dmitryvolkov/portfolio" target="_blank" rel="noopener">Dmitry Volkov</a>.</div>
        <!-- end sidebar copyright -->
    </div>
    <!-- end sidebar -->
    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            <div class="row">
                <!-- main title -->
                <div class="col-12">
                    <div class="main__title">
                        <h2>List Schedules</h2>
                        <span class="main__title-stat">@Model.Schedules.Count Total</span>
                        <div class="main__title-wrap">
                            <select class="filter__select" name="sort" id="filter__sort" data-id="ss-schedules-sort" tabindex="-1" aria-hidden="true" style="display: none;">
                                <option value="0">Thời gian bắt đầu</option>
                                <option value="1">Thời gian kết thúc</option>
                            </select>
                            <div class="main__title-link-wrap" style="margin-right: 30px;">
                                <a asp-page="./Create" class="main__title-link">
                                    <span>Add Schedules</span>
                                </a>
                                <div class="ss-deselect ss-hide"><svg viewBox="0 0 100 100"><path d="M10,10 L90,90 M10,90 L90,10"></path></svg></div>
                            </div>
                            <!-- search -->
                            <form action="#" class="main__title-form">
                                <input type="text" placeholder="Tìm kiếm lịch chiếu..">
                                <button type="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z"></path></svg>
                                </button>
                            </form>
                            <!-- end search -->
                        </div>
                    </div>
                </div>
                <!-- end main title -->
                <!-- schedules -->
                <div class="col-12">
                    <div class="catalog catalog--1" data-scrollbar="true" tabindex="-1" style="overflow: hidden; outline: none;">
                        <div class="scroll-content">
                            <table class="catalog__table">
                                <thead>
                                    <tr>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Movie</th>
                                        <th>Room</th>
                                        <th>3D</th>
                                        <th>Caption</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var schedule in Model.Schedules)
                                    {
                                        if (schedule == null || schedule.StartDatetime == null || schedule.EndDatetime == null)
                                        {
                                            continue;
                                        }
                                        <tr>
                                            <td>
                                                <div class="catalog__text">@schedule.StartDatetime.ToString("dd/MM/yyyy HH:mm")</div>
                                            </td>
                                            <td>
                                                <div class="catalog__text">@schedule.EndDatetime.ToString("dd/MM/yyyy HH:mm")</div>
                                            </td>
                                            <td>
                                                <div class="catalog__text"><a href="#">@(schedule.Movie?.MovieName ?? "Not found")</a></div>
                                            </td>
                                            <td>
                                                <div class="catalog__text">@(schedule.Room?.RoomName ?? "Not found")</div>
                                            </td>
                                            <td>
                                                <div class="catalog__text">@(schedule.Is3D.HasValue ? (schedule.Is3D.Value ? "Yes" : "No") : "Unknown")</div>
                                            </td>
                                            <td>
                                                <div class="catalog__text">@(schedule.IsSubtitle.HasValue ? (schedule.IsSubtitle.Value ? "Yes" : "No") : "Unknown")</div>
                                            </td>
                                            <td>
                                                <div class="catalog__btns">
                                                    <a asp-page="./Edit" asp-route-id="@schedule.ScheduleId" class="catalog__btn catalog__btn--view">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.92,11.6C19.9,6.91,16.1,4,12,4S4.1,6.91,2.08,11.6a1,1,0,0,0,0,.8C4.1,17.09,7.9,20,12,20s7.9-2.91,9.92-7.6A1,1,0,0,0,21.92,11.6ZM12,18c-3.17,0-6.17-2.29-7.9-6C5.83,8.29,8.83,6,12,6s6.17,2.29,7.9,6C18.17,15.71,15.17,18,12,18ZM12,8a4,4,0,1,0,4,4A4,4,0,0,0,12,8Zm0,6a2,2,0,1,1,2-2A2,2,0,0,1,12,14Z"></path></svg>
                                                    </a>
                                                    @if (schedule.StartDatetime.Date == DateTime.Today)
                                                    {
                                                        <button class="btn btn-danger btn-sm" disabled title="Can't delete schedule today'">Delete</button>
                                                    }
                                                    else
                                                    {
                                                        <form asp-page-handler="Delete" asp-route-id="@schedule.ScheduleId" method="post" style="display: inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa lịch chiếu này?');">
                                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="scrollbar-track scrollbar-track-x show" style="display: none;">
                            <div class="scrollbar-thumb scrollbar-thumb-x" style="width: 1178px; transform: translate3d(0px, 0px, 0px);"></div>
                        </div>
                        <div class="scrollbar-track scrollbar-track-y show" style="display: none;">
                            <div class="scrollbar-thumb scrollbar-thumb-y" style="height: 772px; transform: translate3d(0px, 0px, 0px);"></div>
                        </div>
                    </div>
                </div>
                <!-- end schedules -->
                <!-- paginator -->
                <div class="col-12">
                    <div class="main__paginator">
                        <!-- amount -->
                        <span class="main__paginator-pages">Showing @Model.Schedules.Count of @Model.Schedules.Count</span>
                        <!-- end amount -->
                        <ul class="main__paginator-list">
                            <li>
                                <a href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"></path></svg>
                                    <span>Prev</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>Next</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"></path></svg>
                                </a>
                            </li>
                        </ul>
                        <ul class="paginator">
                            <li class="paginator__item paginator__item--prev">
                                <a href="#"><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" viewBox="0 0 24 24"><path d="M8.5,12.8l5.7,5.6c0.4,0.4,1,0.4,1.4,0c0,0,0,0,0,0c0.4-0.4,0.4-1,0-1.4l-4.9-5l4.9-5c0.4-0.4,0.4-1,0-1.4c-0.2-0.2-0.4-0.3-0.7-0.3c-0.3,0-0.5,0.1-0.7,0.3l-5.7,5.6C8.1,11.7,8.1,12.3,8.5,12.8C8.5,12.7,8.5,12.7,8.5,12.8z"></path></svg></a>
                            </li>
                            <li class="paginator__item paginator__item--active"><a href="#">1</a></li>
                            <li class="paginator__item paginator__item--next">
                                <a href="#"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M15.54,11.29,9.88,5.64a1,1,0,0,0-1.42,0,1,1,0,0,0,0,1.41l4.95,5L8.46,17a1,1,0,0,0,0,1.41,1,1,0,0,0,.71.3,1,1,0,0,0,.71-.3l5.66-5.65A1,1,0,0,0,15.54,11.29Z"></path></svg></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- end paginator -->
            </div>
        </div>
    </main>
    <!-- end main content -->
    <!-- view modal -->
    <div class="modal fade" id="modal-view" tabindex="-1" aria-labelledby="modal-view" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal__content modal__content--view">
                    <div class="comments__autor">
                        <img class="comments__avatar" src="~/AdminTemplate_files/user.svg" alt="">
                        <span class="comments__name">Schedules</span>
                        <span class="comments__time">Start time: <span id="modal-start-time"></span></span>
                    </div>
                    <p class="comments__text">
                        End time: <span id="modal-end-time"></span><br />
                        Movie: <span id="modal-movie-name"></span><br />
                        Room: <span id="modal-room-name"></span><br />
                        3D: <span id="modal-is-3d"></span><br />
                        Caption: <span id="modal-is-subtitle"></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- end view modal -->
    <!-- delete modal -->
    <div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="modal-delete" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal__content">
                    <form asp-page-handler="Delete" method="post" class="modal__form">
                        <input type="hidden" name="id" id="delete-schedule-id" />
                        <h4 class="modal__title">Delete schedules</h4>
                        <p class="modal__text">Are you want to delete this schedule?</p>
                        <div class="modal__btns">
                            <button class="modal__btn modal__btn--apply" type="submit"><span>Delete</span></button>
                            <button class="modal__btn modal__btn--dismiss" type="button" data-bs-dismiss="modal" aria-label="Close"><span>Cancel</span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end delete modal -->
    <!-- JS -->
    <script src="~/AdminTemplate_files/bootstrap.bundle.min.js"></script>
    <script src="~/AdminTemplate_files/smooth-scrollbar.js"></script>
    <script src="~/AdminTemplate_files/slimselect.min.js"></script>
    <script src="~/AdminTemplate_files/admin.js"></script>
    <script>
        document.querySelectorAll('.catalog__btn--view').forEach(button => {
            button.addEventListener('click', function() {
                const row = this.closest('tr');
                document.getElementById('modal-start-time').textContent = row.cells[0].textContent;
                document.getElementById('modal-end-time').textContent = row.cells[1].textContent;
                document.getElementById('modal-movie-name').textContent = row.cells[2].textContent;
                document.getElementById('modal-room-name').textContent = row.cells[3].textContent;
                document.getElementById('modal-is-3d').textContent = row.cells[4].textContent;
                document.getElementById('modal-is-subtitle').textContent = row.cells[5].textContent;
            });
        });

        document.querySelectorAll('.catalog__btn--delete').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const scheduleId = this.getAttribute('href').split('id=')[1];
                document.getElementById('delete-schedule-id').value = scheduleId;
            });
        });
    </script>
    <div data-id="ss-schedules-sort" id="ss-schedules-sort" class="ss-content filter__select" role="listbox">
        <div class="ss-search ss-hide"><input readonly="" type="search" placeholder="Search" tabindex="-1" aria-label="Search" autocapitalize="off" autocomplete="off" autocorrect="off"></div>
        <div class="ss-list">
            <div data-id="sort-option-1" id="sort-option-1" class="ss-option ss-selected" role="option" aria-selected="true">Thời gian bắt đầu</div>
            <div data-id="sort-option-2" id="sort-option-2" class="ss-option" role="option" aria-selected="false">Thời gian kết thúc</div>
        </div>
    </div>
</body>
</html>