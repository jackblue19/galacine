@page "/admin/index"
@model Web.Pages.Admin.IndexModel
@{
   
	Layout = null;
}

<!DOCTYPE html>
<!-- saved from url=(0048)https://flixgo.volkovdesign.com/admin/index.html -->
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- CSS -->
	<link rel="stylesheet" href="~/AdminTemplate_files/bootstrap.min.css">
	<link rel="stylesheet" href="~/AdminTemplate_files/slimselect.css">
	<link rel="stylesheet" href="~/AdminTemplate_files/admin.css">

	<!-- Favicons -->
	<link rel="icon" type="image/png" href="https://flixgo.volkovdesign.com/admin/icon/favicon-32x32.png" sizes="32x32">
	<link rel="apple-touch-icon" href="https://flixgo.volkovdesign.com/admin/icon/favicon-32x32.png">

	<meta name="description" content="">
	<meta name="keywords" content="">
	<meta name="author" content="Dmitry Volkov">
	<title>FlixGo – Online Movies, TV Shows &amp; Cinema HTML Template</title>

	<style id="smooth-scrollbar-style">
		[data-scrollbar] {
			display: block;
			position: relative;
		}

		.scroll-content {
			-webkit-transform: translate3d(0, 0, 0);
			transform: translate3d(0, 0, 0);
		}

		.scrollbar-track {
			position: absolute;
			opacity: 0;
			z-index: 1;
			background: rgba(222, 222, 222, .75);
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
			-webkit-transition: opacity 0.5s 0.5s ease-out;
			transition: opacity 0.5s 0.5s ease-out;
		}

			.scrollbar-track.show,
			.scrollbar-track:hover {
				opacity: 1;
				-webkit-transition-delay: 0s;
				transition-delay: 0s;
			}

		.scrollbar-track-x {
			bottom: 0;
			left: 0;
			width: 100%;
			height: 8px;
		}

		.stats-number {
			color: white; /* Đổi màu chữ thành trắng */
		}


		.scrollbar-track-y {
			top: 0;
			right: 0;
			width: 8px;
			height: 100%;
		}

		.scrollbar-thumb {
			position: absolute;
			top: 0;
			left: 0;
			width: 8px;
			height: 8px;
			background: rgba(0, 0, 0, .5);
			border-radius: 4px;
		}
	</style>
</head>
<body>
	<!-- header -->
	<header class="header">
		<div class="header__content">
			<!-- header logo -->
			<a href="https://flixgo.volkovdesign.com/admin/index.html" class="header__logo">
				<img src="~/AdminTemplate_files/logo.svg" alt="">
			</a>
			<!-- end header logo -->
			<!-- header menu btn -->
			<button class="header__btn" type="button">
				<span></span>
				<span></span>
				<span></span>
			</button>
			<!-- end header menu btn -->
		</div>
	</header>
	<!-- end header -->
	<!-- sidebar -->
	<div class="sidebar">
		<!-- sidebar logo -->
		<a href="https://flixgo.volkovdesign.com/admin/index.html" class="sidebar__logo">
			<img src="~/AdminTemplate_files/logo.svg" alt="">
		</a>
		<!-- end sidebar logo -->
		<!-- sidebar user -->
		<div class="sidebar__user">
			<div class="sidebar__user-img">
				<img src="~/AdminTemplate_files/user.svg" alt="">
			</div>

			<div class="sidebar__user-title">
				<span>Admin</span>
				<p>John Doe</p>
			</div>

			<button class="sidebar__user-btn" type="button">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M4,12a1,1,0,0,0,1,1h7.59l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l4-4a1,1,0,0,0,.21-.33,1,1,0,0,0,0-.76,1,1,0,0,0-.21-.33l-4-4a1,1,0,1,0-1.42,1.42L12.59,11H5A1,1,0,0,0,4,12ZM17,2H7A3,3,0,0,0,4,5V8A1,1,0,0,0,6,8V5A1,1,0,0,1,7,4H17a1,1,0,0,1,1,1V19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V16a1,1,0,0,0-2,0v3a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V5A3,3,0,0,0,17,2Z"></path></svg>
			</button>
		</div>
		<!-- end sidebar user -->
		<!-- sidebar nav -->
		@await Html.PartialAsync("_SideBarAdmin")
		<!-- end sidebar nav -->
		<!-- sidebar copyright -->
		<div class="sidebar__copyright">© FlixGo, 2018—2023. <br>Create by <a href="https://themeforest.net/user/dmitryvolkov/portfolio" target="_blank" rel="noopener">Dmitry Volkov</a>.</div>
		<!-- end sidebar copyright -->
	</div>
	<!-- end sidebar -->
	<!-- main content -->
	<main class="main">
		<div class="container-fluid">
			<div class="row">
				<!-- main title -->
				<div class="col-12">
					<div class="main__title">
						<h2>Dashboard</h2>

						<a href="https://flixgo.volkovdesign.com/admin/add-item.html" class="main__title-link"><span>add item</span></a>
					</div>
				</div>
				<!-- end main title -->
			</div>
			<!-- --------------------------------------------------------------------------------------------------------------------------------------- -->
			<div class="row">
				<!-- stats -->
				<div class="col-12 col-sm-6 col-xl-3">
					<div class="stats">
						<span>Total Tickets Sold This Month</span>
						<h3 class="stats-number">@Model.TotalTicketsSold</h3> 
						<img src="~/AdminTemplate_files/graph-bar.svg" alt="">
					</div>
				</div>
				
					<!-- Total Revenue By Month -->
					<div class="col-12 col-sm-6 col-xl-3">
						<div class="stats">
							<span>Total Revenue This Month</span>
							<h3 class="stats-number">@Model.RevenueByMonth</h3> 
							<img src="~/AdminTemplate_files/film.svg" alt="">
						</div>
					</div>

					<!-- Total Items Sold -->
					<div class="col-12 col-sm-6 col-xl-3">
						<div class="stats">
						<span>Total Items Sold This Month</span>
							<h3 class="stats-number">@Model.TotalItemsSold</h3> 
							<img src="~/AdminTemplate_files/comments.svg" alt="">
						</div>
					</div>

					<!-- Total Customers -->
					<div class="col-12 col-sm-6 col-xl-3">
						<div class="stats">
						<span>Total Customers This Month</span>
							<h3 class="stats-number">@Model.TotalCustomers</h3> 
							<img src="~/AdminTemplate_files/star-half-alt.svg" alt="">
						</div>
					</div>
				</div>

				<!-- end stats -->
				<!-- dashbox ---------------------------------------------------------------------------------------->
<div class="row">
    <!-- Dashbox 1: Top Movies -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><img src="~/AdminTemplate_files/award.svg" alt=""> Top Movies</h3>
                <div class="dashbox__wrap">
                    <a class="dashbox__refresh" href="#">
                        <!-- SVG omitted for brevity -->
                    </a>
                    <a class="dashbox__more" href="/Admin/Movies">View All</a>
                </div>
            </div>
            <div class="dashbox__table-wrap dashbox__table-wrap--1" data-scrollbar="true" tabindex="-1">
                <div class="scroll-content">
                    <table class="dashbox__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Movie Name</th>
                                <th>Tickets Sold</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movie in Model.TopMovies)
                            {
                                <tr>
												<td class ="stats-number">@movie.MovieId</td>
												<td class ="stats-number">@movie.MovieName</td>
												<td class ="stats-number">@movie.TicketSold</td>
												<td class ="stats-number">@movie.Rating.ToString("0.0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashbox 2: Top Services -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><img src="~/AdminTemplate_files/film.svg" alt=""> Top Services This Month</h3>
                <div class="dashbox__wrap">
                    <a class="dashbox__refresh" href="#">
                        <!-- SVG omitted for brevity -->
                    </a>
                    <a class="dashbox__more" href="/Admin/Services">View All</a>
                </div>
            </div>
            <div class="dashbox__table-wrap dashbox__table-wrap--2" data-scrollbar="true" tabindex="-1">
                <div class="scroll-content">
                    <table class="dashbox__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Description</th>
                                <th>Total Used</th>
                            </tr>
                        </thead>
                        <tbody>
									<tbody>
											@foreach (var s in Model.TopServices)
											{
											<tr>
												<td class="stats-number">@s.ServiceId</td>
												<td class="stats-number">@s.ServiceDesc</td>
												<td class="stats-number">@s.TotalUsed</td>
											</tr>
											}
									</tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Dashbox 3: Latest Users -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><img src="~/AdminTemplate_files/user-circle.svg" alt=""> Latest Users</h3>
                <div class="dashbox__wrap">
                    <a class="dashbox__refresh" href="#">
                        <!-- SVG omitted for brevity -->
                    </a>
                    <a class="dashbox__more" href="/Admin/Users">View All</a>
                </div>
            </div>
            <div class="dashbox__table-wrap dashbox__table-wrap--3" data-scrollbar="true" tabindex="-1">
                <div class="scroll-content">
                    <table class="dashbox__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Registered At</th>
                            </tr>
                        </thead>
                        <tbody>
									
											@if (Model.LatestUsers != null)
											{
												foreach (var user in Model.LatestUsers)
												{
												<tr>
													<td class ="stats-number">@user.UserId</td>
													<td class="stats-number">@user.Username</td>
													<td class="stats-number">@user.Email</td>
													<td class="stats-number">@(user.CreatedAt.HasValue ? user.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss") : "")</td>
												</tr>
												}
											}
									
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashbox 4: Top Items -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><img src="~/AdminTemplate_files/star-half-alt.svg" alt=""> Top Items</h3>
                <div class="dashbox__wrap">
                    <a class="dashbox__refresh" href="#">
                        <!-- SVG omitted for brevity -->
                    </a>
                    <a class="dashbox__more" href="/Admin/Items">View All</a>
                </div>
            </div>
            <div class="dashbox__table-wrap dashbox__table-wrap--4" data-scrollbar="true" tabindex="-1">
                <div class="scroll-content">
                    <table class="dashbox__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Total Sold</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.TopItems)
                            {
                                <tr>
												<td class="stats-number">@i.ItemId</td>
												<td class="stats-number">@i.Name</td>
												<td class="stats-number">@i.Type</td>
												<td class="stats-number">@i.TotalSold</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

				<!-- end dashbox -->
			</div>
		</div>
	</main>
	<!-- end main content -->
