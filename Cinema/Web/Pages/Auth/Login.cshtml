@page "/auth/login"
@model Web.Pages.Auth.LoginModel
@{
	ViewData["Title"] = "Đăng nhập";
	Layout = null;
}

<link rel="stylesheet" href="/css/login.css" />

<div class="cinema-container">
    <div class="cinema-left">
        <div class="cinema-slider">
            <img src="https://i.ebayimg.com/images/g/zRAAAOSwvaJgJSg1/s-l1600.webp" alt="Trailer Poster" />
            <div class="cinema-caption">
                <h2>🎬 THE BATMAN</h2>
                <p>Khởi chiếu toàn quốc từ 15.05.2025</p>
            </div>
        </div>
    </div>

    <div class="cinema-right">
        <div class="login-box">
            <h2>🍿 Đăng nhập hệ thống rạp phim</h2>
            <form method="post">
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <button type="submit" class="btn-login">🎟 Vào rạp</button>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="error">@Model.ErrorMessage</div>
                }
            </form>
        </div>
    </div>
</div>
