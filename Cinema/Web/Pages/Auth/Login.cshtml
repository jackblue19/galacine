@page "/auth/login"
@model Web.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>🔐 Đăng nhập</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Mật khẩu</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Đăng nhập</button>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
    }
</form>
