@page "/auth/register"
@model Web.Pages.Auth.RegisterModel
@{
	ViewData["Title"] = "Đăng ký";
	Layout = null;
}

<link rel="stylesheet" href="/css/login.css" />

<div class="register-form">
	<h2>📽️ Đăng ký tài khoản thành viên</h2>
	<form method="post">
		<div class="mb-3">
			<label asp-for="Username" class="form-label">🧑 Tên đăng nhập</label>
			<input asp-for="Username" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Email" class="form-label">📧 Email</label>
			<input asp-for="Email" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Password" class="form-label">🔐 Mật khẩu</label>
			<input asp-for="Password" type="password" class="form-control" />
		</div>
		<button class="btn btn-primary w-100" type="submit">🎬 Đăng ký</button>

		@if (!string.IsNullOrEmpty(Model.ErrorMessage))
		{
			<div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
		}
	</form>
</div>
