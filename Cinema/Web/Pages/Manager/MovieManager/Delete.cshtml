@page
@model Web.Pages.Manager.MovieManager.DeleteModel

@{
    ViewData["Title"] = "🗑️ Xoá phim";
    Layout = "_LayoutManager";
}

<div class="delete-container">
    <h1 class="text-danger">🗑️ Xác nhận xoá phim</h1>
    <p>Bạn có chắc chắn muốn xoá phim này không? Hành động này không thể hoàn tác.</p>

    <div class="movie-summary">
        <h4>🎬 @Model.Movie.MovieName</h4>
        <p><strong>Thể loại:</strong> @Model.Movie.Category?.CategoryDesc</p>
        <p><strong>Quốc gia:</strong> @Model.Movie.Nation</p>
        <p><strong>Rating:</strong> @Model.Movie.Rating ⭐</p>
        <p><strong>Thời lượng:</strong> @Model.Movie.Duration phút</p>
        <p><strong>Ngày phát hành:</strong> @Model.Movie.ReleaseDate?.ToString("dd/MM/yyyy")</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Movie.MovieId" />
        <button type="submit" class="btn btn-danger">🗑️ Xoá</button>
        <a asp-page="./Index" class="btn btn-secondary">↩️ Huỷ bỏ</a>
    </form>
</div>

<style>
    .delete-container {
        padding: 2rem;
        background: #1e1e1e;
        border-radius: 12px;
        color: white;
        max-width: 600px;
        margin: auto;
    }

    .movie-summary {
        background: #2c2c2c;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .btn-danger {
        background-color: crimson;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-weight: bold;
        color: white;
        margin-right: 1rem;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #ff4d4d;
        }

    .btn-secondary {
        background-color: #555;
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #888;
            color: #fff;
        }
</style>
