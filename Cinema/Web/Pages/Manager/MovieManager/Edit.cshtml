@page "{id:int}"
@model Web.Pages.Manager.MovieManager.EditModel

@{
    Layout = "_LayoutManager";
    ViewData["Title"] = "🎞️ Cập nhật phim";
}

@section Styles {
    <link rel="stylesheet" href="~/css/movie-edit.css" />
}

<div class="edit-container">
    <form method="post" class="edit-section">
        <h2>✏️ Chỉnh sửa phim</h2>

        <label>Tên phim</label>
        <input asp-for="Movie.MovieName" class="form-control" />

        <label>Mô tả</label>
        <textarea asp-for="Movie.MovieDesc" class="form-control"></textarea>

        <label>Đạo diễn</label>
        <input asp-for="Detail.Director" class="form-control" />

        <label>Rating</label>
        <input asp-for="Movie.Rating" type="number" step="0.1" min="0" max="10" class="form-control" />

        <label>Thể loại</label>
        @foreach (var genre in Model.GenreList)
        {
            <div>
                <input type="checkbox" name="SelectedGenres" value="@genre.Value" checked="@genre.Selected" />
                <label>@genre.Text</label>
            </div>
        }

        <button type="submit" class="btn-save">💾 Lưu thay đổi</button>
    </form>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
