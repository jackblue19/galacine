@page
@model Web.Pages.Manager.MovieManager.IndexModel

@{
    ViewData["Title"] = "📽️ Danh sách phim";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<h2>📽️ Danh Sách Phim</h2>

<table class="table-cinema">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên phim</th>
            <th>Thể loại</th>
            <th>Thời lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.MovieId</td>
                <td>@movie.MovieName</td>
                <td>
                    @* @string.Join(", ", movie.Genres.Select(g => g.GenreDesc)) *@
                </td>
                <td>@movie.Duration phút</td>
                <td>
                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@movie.MovieId">✏️ Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
